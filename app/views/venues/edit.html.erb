	<div class="container">
    <div class="jumbotron">
     <h2>Edit Details of Venue</h2>

     <%= form_for @venues, :html => {:class => "form-horizontal"} do |f| %>

               <div class="form-group">
                <%= f.label :name, "Name:", class: "col-md-4 control-label" %>
                <div class="col-md-8">
                  <%= f.text_field :name ,class: "form-control", :required => true %>
                </div>
              </div>

            <div class="form-group">
              <%= f.label :city, "City:", class: "col-md-4 control-label" %>
              <div class="col-md-8">
                <%= f.text_field :city ,class: "form-control", :required => true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :state, "State:", class: "col-md-4 control-label" %>
              <div class="col-md-8">
                <%= f.text_field :state ,class: "form-control", :required => true %>
              </div>
            </div>

          
            <div class="form-group">
              <%= f.label :family_friendly, class: "col-md-4 control-label" %>
               <div class="col-md-8">  
                  <%= f.select :family_friendly, [["Yes", true], ["No", false]], {}, {class: "form-control"} %> 
              </div> 
            </div>

            
            <center><%= submit_tag "Add", class: "btn btn-default btn-primary" %>
             
    <% end %>

      <br><br>
        <center>
            <a <%= link_to "Go To Venues", venues_path, class: 'btn btn-default btn-primary' %></a>
        </center>

  </div>
</div>

