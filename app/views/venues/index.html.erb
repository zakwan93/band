<div class="container">
  <div class="jumbotron">
    <h1>The New Venue for Events</h1> <br>

<table class="table table-striped table-inverse">
  <thead>
    <tr>
      <th>#</th>
      <th>Venue Name</th>
      <th>City</th>
      <th>State</th>
      <th>Family Friendly</th>
      <th>Edit-Cancel Event</th>
    </tr>
  </thead>
  <tbody>
  	<% @venues.each do |t| %>
    <tr>
      <th scope="row">1</th>
      <td><%= t.name %></td>
      <td><%= t.city %></td>
      <td><%= t.state %></td>
      <td><%= t.family_friendly %></td>
      <td><%= link_to "Edit", edit_venue_path(t) %> -
          <%= link_to "Remove", venue_path(t), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
    <% end %>
</tbody>
</table>

</div>
</div>



<div class="container">
  <div class="jumbotron">
    <h1>Most Amazing Bands and Artist</h1> <br>

<table class="table table-striped table-inverse">
  <thead>
    <tr>
      <th>#</th>
      <th>Band Name</th>
      <th>Genre</th>
      <th>Explicit Lyrics</th>
      <th>Edit-Cancel Event</th>
    </tr>
  </thead>
  <tbody>
  	<% @bands.each do |t| %>
    <tr>
      <th scope="row">1</th>
      <td><%= t.name %></td>
      <td><%= t.genre %></td>
      <td><%= t.explicit_lyrics %></td>
      <td><%= link_to "Edit", edit_band_path(t) %> -
          <%= link_to "Remove", band_path(t), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
    <% end %>
</tbody>
</table>

</div>
</div>

<div class="container">
  <div class="jumbotron">
    <h1>Most Exited Events of 2018</h1> <br>

<table class="table table-striped table-inverse">
  <thead>
    <tr>
      <th>#</th>
      <th>Venue Id</th>
      <th>Band_Id</th>
      <th>Event Date</th>
      <th>Alcohol Served</th>
       <th>Edit-Cancel Event</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |t| %>
    <tr>
      <th scope="row">1</th>
      <td><%= t.venue_id %></td>
      <td><%= t.band_id %></td>
      <td><%= t.event_date %></td>
      <td><%= t.alcohol_served %></td>
      <td><%= link_to "Edit", edit_band_path(t) %> -
          <%= link_to "Remove", band_path(t), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
    <% end %>
</tbody>
</table>

</div>
</div>

